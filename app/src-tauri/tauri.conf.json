{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "after",
  "version": "0.1.0",
  "identifier": "default",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "assetProtocol": {
        "enable": false,
        "scope": ["$DESKTOP/A.F.T.E.R**", "$HOME/OneDrive/Desktop/A.F.T.E.R**"]
      },
     "csp": "default-src 'self'; img-src 'self' asset: tauri: data: blob: http://asset.localhost https://asset.localhost;",
      "capabilities": ["default"]
    },
    "windows": [
      {
        "label": "main",
        "title": "A.F.T.E.R",
        "width": 1400,
        "height": 1024,
        "dragDropEnabled": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all"
  }
}
